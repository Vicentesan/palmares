{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "dist",
		"baseUrl": "./",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
  },
  "include": ["src/**/*.ts", "migrations/*.ts", "database.config.ts", "drizzle.config.ts", "migrate.ts", "makemigrations.ts", "load.ts"],
}
